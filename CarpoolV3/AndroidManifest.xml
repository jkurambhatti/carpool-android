<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="carpool.v3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- 切记加入导入语句，不然会报NoClassDefFoundError -->
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".CarpoolV3Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".RenrenAuthActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GISActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" >
            </meta-data>
        </activity>
        <activity
            android:name=".SinaWeiboAuthActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="AuthActivity"
                    android:scheme="myapp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PincheActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Pinche2Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Pinche3Activity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WaitActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_lOCATION" />

</manifest>